<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/greyOne"/>
            <corners android:radius="18dp" />


        </shape>
    </item>

    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:endColor="@color/light_blue_900"
                android:centerColor="@color/light_blue_600"
                android:startColor="@color/light_blue_200"
                android:type="linear"/>
            <corners android:radius="10dp" />

            <padding android:top="10dp" android:left="10dp" android:bottom="10dp"
                     android:right="10dp"/>
        </shape>
    </item>
</layer-list>